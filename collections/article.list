<div class="scrl">
  <div class="category-list">
    {.section collection}
    {.repeated section categories}
    <a href="{fullUrl}?category={@|url-encode}" class="chip">{@}</a>
    {.end}
    {.end}
  </div>
  <div class="container">
    <div class="articles">
      {.repeated section items}
      <a href="{fullUrl}" class="article">
        <!-- <div class="img" style="background-image: url(https://placehold.co/300);"></div> -->
        <div class="img" style="background-image: url({assetUrl});"></div>
        <div class="info">
          <div class="category">{categories.0}</div>
          <div class="title">{title}</div>
          <div class="excerpt">{excerpt}</div>
          <div class="readmore">Read More <svg width="18" height="18" viewBox="0 0 18 18" fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <path
                d="M7.10225 4.10225C6.88258 4.32192 6.88258 4.67808 7.10225 4.89775L11.2045 9L7.10225 13.1023C6.88258 13.3219 6.88258 13.6781 7.10225 13.8977C7.32192 14.1174 7.67808 14.1174 7.89775 13.8977L12.3977 9.39775C12.6174 9.17808 12.6174 8.82192 12.3977 8.60225L7.89775 4.10225C7.67808 3.88258 7.32192 3.88258 7.10225 4.10225Z"
                fill="white" />
            </svg>
          </div>
        </div>
      </a>
      {.end}
    </div>

  </div>
</div>