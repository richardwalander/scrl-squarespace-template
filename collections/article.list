<div class="scrl">
  <div class="category-list">
    {.section collection}
    {.repeated section categories}
    <a href="{.equal? @ categoryFilter}{fullUrl}{.or}{fullUrl}?category={@|url-encode}{.end}"
      class="chip {.equal? @ categoryFilter}selected{.end}">
      {@}
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M5.96967 5.96967C6.26256 5.67678 6.73744 5.67678 7.03033 5.96967L12 10.9393L16.9697 5.96967C17.2626 5.67678 17.7374 5.67678 18.0303 5.96967C18.3232 6.26256 18.3232 6.73744 18.0303 7.03033L13.0607 12L18.0303 16.9697C18.3232 17.2626 18.3232 17.7374 18.0303 18.0303C17.7374 18.3232 17.2626 18.3232 16.9697 18.0303L12 13.0607L7.03033 18.0303C6.73744 18.3232 6.26256 18.3232 5.96967 18.0303C5.67678 17.7374 5.67678 17.2626 5.96967 16.9697L10.9393 12L5.96967 7.03033C5.67678 6.73744 5.67678 6.26256 5.96967 5.96967Z"
          fill="white" />
      </svg>
    </a>
    {.end}
    {.end}
  </div>
  <div class="container">
    <div class="articles">
      {.repeated section items}
      <a href="{fullUrl}" class="article">
        <!-- <div class="img" style="background-image: url(https://placehold.co/300);"></div> -->
        <div class="img" style="background-image: url({assetUrl});"></div>
        <div class="info">
          <div class="category">{categories.0}</div>
          <div class="title">{title}</div>
          <div class="excerpt">{excerpt}</div>
          <div class="readmore">Read More <svg width="18" height="18" viewBox="0 0 18 18" fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <path
                d="M7.10225 4.10225C6.88258 4.32192 6.88258 4.67808 7.10225 4.89775L11.2045 9L7.10225 13.1023C6.88258 13.3219 6.88258 13.6781 7.10225 13.8977C7.32192 14.1174 7.67808 14.1174 7.89775 13.8977L12.3977 9.39775C12.6174 9.17808 12.6174 8.82192 12.3977 8.60225L7.89775 4.10225C7.67808 3.88258 7.32192 3.88258 7.10225 4.10225Z"
                fill="white" />
            </svg>
          </div>
        </div>
      </a>
      {.or}
      {@|apply articles-empty-state.block}
      {.end}
    </div>

    <div class="pagination">
      {.section pagination}
      {.if prevPage}
      <a href="{prevPageUrl}" class="btn">
        <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M15.0303 5.46967C15.3232 5.76256 15.3232 6.23744 15.0303 6.53033L9.56066 12L15.0303 17.4697C15.3232 17.7626 15.3232 18.2374 15.0303 18.5303C14.7374 18.8232 14.2626 18.8232 13.9697 18.5303L7.96967 12.5303C7.67678 12.2374 7.67678 11.7626 7.96967 11.4697L13.9697 5.46967C14.2626 5.17678 14.7374 5.17678 15.0303 5.46967Z"
            fill="white" />
        </svg>
        Prev
      </a>
      {.end}
      {.if nextPage}
      <a href="{nextPageUrl}" class="btn">
        Next
        <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M9.96967 5.46967C9.67678 5.76256 9.67678 6.23744 9.96967 6.53033L15.4393 12L9.96967 17.4697C9.67678 17.7626 9.67678 18.2374 9.96967 18.5303C10.2626 18.8232 10.7374 18.8232 11.0303 18.5303L17.0303 12.5303C17.3232 12.2374 17.3232 11.7626 17.0303 11.4697L11.0303 5.46967C10.7374 5.17678 10.2626 5.17678 9.96967 5.46967Z"
            fill="white" />
        </svg>
      </a>
      {.end}
      {.end}
    </div>

  </div>
</div>